<% include ../partials/header %>


<div class="container">
	<header class="jumbotron">
		<h1>Welcome to Image Gallary!</h1>
		<p>See Your Favourite Pictures & Enjoy Your Day!</p>
		<a href="/loggedin/campgrounds/new" class="btn btn-primary">Add New Picture</a>
	</header>

	<div class="row">
		<div class="col-lg-12">
			<h3>Our Most Popular Pictures!</h3>
		</div>
	</div>
	
	<!--flex-wrap works differently in Safari-->
	<div class="row text-center" style="display: flex; flex-wrap: wrap;">
		<% campgrounds.forEach(function(camp){ %>
			<div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
				<div class="thumbnail">
					<img src="<%= camp.image %>" alt="<%=camp.name%>">
					<div class="caption">
						<h4><%= camp.name %></h4>
					</div>
					<p>
						<a href="/loggedin/campgrounds/<%= camp.id%>" class="btn btn-primary">More Info</a>
					</p>
				</div>
			</div>
		<% }); %>
	</div>
</div>

<% include ../partials/footer %>